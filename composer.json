{
    "name": "damalis/botble-iyzico",
    "description": "iyzico payment gateway for Botble Technologies products",
    "keywords": ["payment gateway", "iyzico", "iyzipay", "pos", "botble"],
	"homepage": "https://github.com/damalis/botble-iyzico",
	"license": "MIT",
    "repositories": [
        {
          "type": "composer",
          "url": "https://github.com/damalis/botble-iyzico.git"
        }
      ],
	"authors": [
		{
			"name": "damalis",
			"email": "erdal80@hotmail.com",
			"homepage": "https://github.com/damalis"
		}
	],
    "minimum-stability": "dev",
    "type": "library",
    "require": {
        "iyzico/iyzipay-php": ">=2.0.54",
        "composer/installers": "~1.0",
		"oomphinc/composer-installers-extender": "*"
    },
    "extra": {
		"installer-types": ["library"],
        "installer-paths": {
            "platform/plugins/": ["damalis/botble-iyzico"]
        }
    },
	"scripts": {
        "post-package-install": [
            "php -r \"system('mv ' . getcwd() . '/platform/plugins/damalis/botble-iyzico/iyzico ' . getcwd() . '/public/vendor/core/plugins');\""
        ]
    }	
}